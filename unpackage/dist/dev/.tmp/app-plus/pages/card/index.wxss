.hm-goods-card {
  margin: 30rpx;
  border-radius: 30rpx;
}
.list{
	width: 100%;
}
.goods {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: relative;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  margin-bottom: 20rpx;
  background: #fff;
  padding: 20rpx;
  border-radius: 15rpx;
}
.goods:last-child{
	margin-bottom: 0;
}
.wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  margin-right: 29rpx;
  border-radius: 15rpx;
  background-color: #eeeff3;
  overflow: hidden;
}
.pic {
  width: 100rpx;
  height: 100rpx;
}
.block {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.tradeName {
  position: relative;
  opacity: 1;
  line-height: 38.96rpx;
  white-space: nowrap;
  color: #141821;
  font-size: 28rpx;
  font-weight: 600;
}
.describe {
  position: relative;
  opacity: 1;
  margin-top: 7.79rpx;
  height: 38.96rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 38.96rpx;
  white-space: nowrap;
  color: #8c8c8c;
  font-size: 26rpx;
  font-weight: normal;
}

